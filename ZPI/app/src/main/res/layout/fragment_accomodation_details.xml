<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="PUNKT WYCIECZKI-NOCLEG"
            android:textColor="@color/black"
            android:textSize="10sp">
        </TextView>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/accNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_light"
                android:text="JakiÅ› tam hotel"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_weight="40">
            </TextView>

            <ImageButton
                android:id="@+id/btn_editAccomodation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/pencil_simple"
                android:layout_gravity="right"
                android:layout_weight="10"
                >
            </ImageButton>
        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Adres"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_accAddress"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:inputType="text"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Data zamledowania"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_accDate"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Godzina zameldowania"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_accHH"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rounded"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:text="10"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="28sp"/>

                    <TextView
                        android:id="@+id/tv_accMM"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rounded"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:text="10"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Data wymeldowania"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_accDate2"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded"
                    android:drawableTint="@color/white"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Godzina wymeldowania"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_accHH2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rounded"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:text="10"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="28sp"/>

                    <TextView
                        android:id="@+id/tv_accMM2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rounded"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:text="10"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Uwagi"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_accDetails"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:inputType="text"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



                <ImageButton
                    android:id="@+id/btn_deleteAccomodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/przycisk_usun_czerwony"
                    android:layout_gravity="center">
                </ImageButton>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>